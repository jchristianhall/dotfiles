# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"
alias cc="say 'Command complete'"

# Git
alias gaac="g aa && g ci"
alias gacm="g aa && g ci --amend"
alias g="git"

# Node
alias ygls="yarn global list"
alias yga="yarn global add"
alias yi="yarn install"
alias yr="yarn run"
alias ys="yarn start"
alias ngls="npm list -g --depth 0"
alias ns="npm start"
alias ni="npm install"

# tmux
alias mux="tmuxinator"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Work
alias tnsu="BRAND=tuftandneedle bin/setup"
alias tnmi="BRAND=tuftandneedle bin/migrate"
alias tnsd="BRAND=tuftandneedle bin/start-dev"

alias sesu="BRAND=serta bin/setup"
alias semi="BRAND=serta bin/migrate"
alias sesd="BRAND=serta bin/start-dev"

alias brsu="BRAND=beautyrest bin/setup"
alias brmi="BRAND=beautyrest bin/migrate"
alias brsd="BRAND=beautyrest bin/start-dev"

alias nsn="npm run start:next"